---
import { icons, type IconName } from './icons';

interface Props {
  name: IconName;
  class?: string;
  size?: number;
}

const { name, class: className = '', size = 24 } = Astro.props;
const icon = icons[name];
---

<span
  class:list={['inline-flex items-center justify-center', className]}
  style={`width: ${size}px; height: ${size}px;`}
  set:html={icon}
/>
