---
import BaseLayout from '../layouts/BaseLayout.astro';
import SupportButtons from '../components/SupportButtons.astro';

const skills = [
  { name: 'Python', level: 90 },
  { name: 'TypeScript', level: 85 },
  { name: 'React / Next.js', level: 80 },
  { name: 'Node.js', level: 75 },
  { name: 'Security', level: 70 },
];

const projects = [
  {
    name: 'venom-maid',
    description: 'マルチプラットフォームSNS投稿自動化ツール',
    tags: ['Python', 'Automation'],
  },
  {
    name: 'nami-auto-posts',
    description: 'スケジュールベースの投稿管理システム',
    tags: ['TypeScript', 'Scheduler'],
  },
  {
    name: 'article-publisher',
    description: 'マルチプラットフォーム記事投稿システム',
    tags: ['Python', 'Astro'],
  },
];
---

<BaseLayout title="About | Secure Auto Lab" description="Secure Auto Labについて">
  <div class="max-w-4xl mx-auto">
    <!-- Hero -->
    <header class="text-center mb-16">
      <div class="w-32 h-32 mx-auto mb-6 rounded-full bg-gradient-to-br from-accent-cyan to-accent-purple p-1">
        <div class="w-full h-full rounded-full bg-dark-950 flex items-center justify-center text-5xl">
          👨‍💻
        </div>
      </div>
      <h1 class="text-heading-1 font-bold text-white mb-4">About</h1>
      <p class="text-xl text-dark-300">
        自動化 × セキュリティの実験場
      </p>
    </header>

    <!-- Mission -->
    <section class="mb-16">
      <div class="relative overflow-hidden rounded-3xl p-8 md:p-12">
        <div class="absolute inset-0 bg-gradient-to-br from-accent-cyan/10 to-accent-purple/10"></div>
        <div class="absolute inset-0 border border-white/10 rounded-3xl"></div>

        <div class="relative">
          <h2 class="text-heading-3 font-bold text-white mb-6">Secure Auto Lab とは</h2>
          <p class="text-lg text-dark-300 leading-relaxed">
            「作ったものを記録して、シェアする」をモットーに、
            自動化ツールやセキュリティ関連のプロジェクトについて技術解説を発信しています。
            実際に動くコードと、開発過程でのハマりポイントを共有することで、
            同じ課題に取り組む開発者の助けになることを目指しています。
          </p>
        </div>
      </div>
    </section>

    <!-- Content Categories -->
    <section class="mb-16">
      <h2 class="text-heading-3 font-bold text-white mb-8">コンテンツ</h2>
      <div class="grid sm:grid-cols-2 gap-4">
        {[
          { icon: '⚡', title: '自動化', desc: 'SNS投稿・スケジューリング・ワークフロー' },
          { icon: '🤖', title: 'AI', desc: '画像生成・機械学習・ComfyUI' },
          { icon: '🔐', title: 'セキュリティ', desc: '認証・暗号化・セキュアな設計' },
          { icon: '💡', title: '開発Tips', desc: '効率化・ベストプラクティス' },
        ].map((item) => (
          <div class="p-6 rounded-2xl bg-white/[0.02] border border-white/5 hover:border-white/10 transition-all">
            <span class="text-3xl mb-4 block">{item.icon}</span>
            <h3 class="font-semibold text-white mb-2">{item.title}</h3>
            <p class="text-sm text-dark-400">{item.desc}</p>
          </div>
        ))}
      </div>
    </section>

    <!-- Skills -->
    <section class="mb-16">
      <h2 class="text-heading-3 font-bold text-white mb-8">スキル</h2>
      <div class="space-y-4">
        {skills.map((skill) => (
          <div class="p-4 rounded-xl bg-white/[0.02] border border-white/5">
            <div class="flex justify-between mb-2">
              <span class="font-medium text-white">{skill.name}</span>
              <span class="text-sm text-dark-400">{skill.level}%</span>
            </div>
            <div class="h-2 bg-dark-800 rounded-full overflow-hidden">
              <div
                class="h-full bg-gradient-to-r from-accent-cyan to-accent-purple rounded-full transition-all duration-1000"
                style={`width: ${skill.level}%;`}
              ></div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Projects -->
    <section class="mb-16">
      <h2 class="text-heading-3 font-bold text-white mb-8">プロジェクト</h2>
      <div class="grid gap-4">
        {projects.map((project) => (
          <div class="group p-6 rounded-2xl bg-white/[0.02] border border-white/5 hover:border-accent-cyan/30 transition-all">
            <div class="flex items-start justify-between gap-4">
              <div>
                <h3 class="font-semibold text-white group-hover:text-accent-cyan transition-colors mb-2">
                  {project.name}
                </h3>
                <p class="text-sm text-dark-400 mb-3">{project.description}</p>
                <div class="flex gap-2">
                  {project.tags.map((tag) => (
                    <span class="text-xs px-2 py-1 rounded-md bg-white/5 text-dark-400">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
              <div class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center flex-shrink-0">
                <svg class="w-5 h-5 text-dark-400" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Contact -->
    <section class="mb-16">
      <h2 class="text-heading-3 font-bold text-white mb-8">お問い合わせ</h2>
      <div class="p-8 rounded-2xl bg-white/[0.02] border border-white/5">
        <p class="text-dark-300 mb-6">
          ご質問・ご要望・お仕事のご依頼は、各種SNSのDMからお願いします。
        </p>
        <div class="flex flex-wrap gap-3">
          <a
            href="https://twitter.com/secure_auto_lab"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 text-dark-300 hover:text-white transition-all"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            X (Twitter)
          </a>
          <a
            href="https://github.com/"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl bg-white/5 hover:bg-white/10 border border-white/10 text-dark-300 hover:text-white transition-all"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            GitHub
          </a>
        </div>
      </div>
    </section>

    <!-- Support -->
    <section>
      <h2 class="text-heading-3 font-bold text-white mb-8">サポート</h2>
      <div class="p-8 rounded-2xl bg-gradient-to-br from-accent-pink/10 to-accent-purple/10 border border-white/10">
        <p class="text-dark-300 mb-6">
          記事が役に立ったら、ぜひ応援をお願いします。
          いただいたサポートは、より良いコンテンツ作成に使わせていただきます。
        </p>
        <SupportButtons />
      </div>
    </section>
  </div>
</BaseLayout>
